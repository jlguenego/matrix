{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "import"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "prettier"
  ],
  "env": {
    "es2020": true,
    "node": true
  },
  "ignorePatterns": ["dist/"],
  "rules": {
    "import/order": ["warn", { "alphabetize": { "order": "asc" } }]
  }
}
